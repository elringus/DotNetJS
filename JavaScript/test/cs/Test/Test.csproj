<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>bin/codegen</CompilerGeneratedFilesOutputPath>
        <TrimmerSingleWarn>false</TrimmerSingleWarn>
        <BootsharpEmbedBinaries>false</BootsharpEmbedBinaries>
        <BootsharpAggressiveTrimming>true</BootsharpAggressiveTrimming>
        <BootsharpBundleCommand>npx rollup bootsharp.js -d ./ -f es -g process,module --preserveModules --entryFileNames [name].mjs</BootsharpBundleCommand>
        <RunAOTCompilation>true</RunAOTCompilation>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Bootsharp" Version="*-*"/>
        <ProjectReference Include="../Test.Types/Test.Types.csproj"/>
    </ItemGroup>

</Project>
