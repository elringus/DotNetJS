<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyTitle>Bootsharp.Common</AssemblyTitle>
        <PackageId>Bootsharp.Common</PackageId>
        <Description>Platform-agnostic common Bootsharp APIs.</Description>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <NoWarn>CS1591</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../Bootsharp.Generator/bin/$(Configuration)/netstandard2.0/Bootsharp.Generator.dll"
              Pack="true" Visible="false" PackagePath="analyzers/dotnet/cs"/>
        <InternalsVisibleTo Include="Bootsharp.Common.Test"/>
    </ItemGroup>

</Project>
